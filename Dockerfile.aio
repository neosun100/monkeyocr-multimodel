# MonkeyOCR All-in-One Docker Image (with Models)
# Version: 1.0.0
# Includes: MonkeyOCR-pro-3B + Qwen3-VL-8B-Instruct + All dependencies
FROM nvidia/cuda:12.6.3-runtime-ubuntu22.04

LABEL maintainer="neosun100"
LABEL version="1.0.0"
LABEL description="MonkeyOCR Multi-Model - All-in-One with embedded models"

# Prevent interactive prompts
ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=Asia/Shanghai

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3.10 python3.10-dev python3-pip \
    libgl1-mesa-glx libglib2.0-0 git curl wget \
    poppler-utils \
    build-essential gcc g++ \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Create symbolic links
RUN ln -sf /usr/bin/python3.10 /usr/bin/python && \
    ln -sf /usr/bin/pip3 /usr/bin/pip

# Configure pip
RUN pip config set global.index-url https://pypi.tuna.tsinghua.edu.cn/simple
RUN pip install --upgrade pip setuptools wheel
ENV PIP_NO_CACHE_DIR=1

# Install PyTorch
ARG CUDA_VERSION=126
RUN pip install torch==2.6.0 torchvision==0.21.0 torchaudio==2.6.0 --index-url https://download.pytorch.org/whl/cu${CUDA_VERSION}

# Copy all project files first
WORKDIR /app/MonkeyOCR
COPY . .

# Install project dependencies
RUN pip install -e .

# Install inference backends
RUN pip install lmdeploy==0.9.2
RUN pip install transformers>=4.50.0 accelerate qwen-vl-utils

# Install model download tools
RUN pip install modelscope huggingface_hub

# Install PaddlePaddle for PP-DocLayout
RUN pip install paddlepaddle-gpu==3.0.0 -i https://www.paddlepaddle.org.cn/packages/stable/cu126/
RUN pip install "paddlex[base]"

# Install additional dependencies
RUN pip install fastmcp>=2.0.0 anyio gradio fastapi uvicorn python-multipart

# Apply LMDeploy patcher (for 20/30/40 series GPUs)
RUN python /app/MonkeyOCR/tools/lmdeploy_patcher.py patch || true

# Create directories
RUN mkdir -p /tmp/monkeyocr

# Make scripts executable
RUN chmod +x /app/MonkeyOCR/*.sh 2>/dev/null || true
RUN chmod +x /app/MonkeyOCR/docker/*.sh 2>/dev/null || true

# Environment variables
ENV PYTHONUNBUFFERED=1
ENV TMPDIR=/tmp/monkeyocr
ENV HF_HUB_CACHE=/app/MonkeyOCR/model_weight
ENV MODELSCOPE_CACHE=/app/MonkeyOCR/model_weight

# Expose ports
EXPOSE 7860 7870

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:7870/health || exit 1

# Default entrypoint
ENTRYPOINT ["/app/MonkeyOCR/entrypoint_aio.sh"]
CMD ["all"]
